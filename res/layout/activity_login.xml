<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffbb00">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Login"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#444444"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_margin="8dp"
            android:padding="8dp">

            <TableRow
                android:layout_marginBottom="20dp">

                <TextView

                    android:textColor="#000000"
                    android:text="User ID"
                    android:textSize="20sp"/>
                <TextView
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/etUserId"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:inputType="textPersonName" />

            </TableRow>

            <TableRow
                android:layout_marginBottom="20dp">

                <TextView
                    android:textColor="#000000"
                    android:text="Password"
                    android:textSize="25sp"/>
                <TextView
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="20sp"/>

                <EditText
                    android:textColor="#000000"
                    android:id="@+id/etPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="numberPassword" />

            </TableRow>

            <TableRow
                android:layout_marginBottom="20dp">

                <CheckBox
                    android:textColor="#000000"
                    android:id="@+id/RemUser"
                    android:text="Remember User Id"
                    android:textSize="20sp"/>

            </TableRow>

            <TableRow
                android:layout_marginBottom="20dp">

                <CheckBox
                    android:textColor="#000000"
                    android:id="@+id/Rempass"
                    android:text="Remember Password"
                    android:textSize="20sp"/>

            </TableRow>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/account_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't you Have an Account?"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/buttonsignup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Signup"
                    android:textColor="#4444ff"
                    android:backgroundTint="#ffffff"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/account_type_label"/>

            </RelativeLayout>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@id/buttonExit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Exit"
                android:backgroundTint="#ffbb00"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="|"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#444444"/>

            <Button
                android:id="@+id/buttongo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Go"
                android:backgroundTint="#ffbb00"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>