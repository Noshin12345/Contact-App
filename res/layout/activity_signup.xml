<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffbb00">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#444444"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_margin="8dp"
            android:padding="8dp">

            <TableRow
                android:layout_marginBottom="4dp">
                <TextView
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView

                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <EditText
                    android:textColor="#000000"
                    android:id="@+id/etusername"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:minHeight="48dp"
                    android:inputType="textPersonName"/>


            </TableRow>

            <TableRow>
                <TextView
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/etemail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="textEmailAddress"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:textColor="#000000"
                    android:text="Phone"
                    android:textSize="20sp"/>

                <TextView
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="20sp"/>

                <EditText
                    android:textColor="#000000"
                    android:id="@+id/etphone"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="phone"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:textColor="#000000"
                    android:text="User ID"
                    android:textSize="20sp"/>

                <TextView
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="20sp"/>

                <EditText
                    android:textColor="#000000"
                    android:id="@+id/etuserid"
                    android:layout_width="0dp"
                    android:layout_weight="1"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:textColor="#000000"
                    android:text="Password"
                    android:textSize="20sp"/>

                <TextView
                    android:textColor="#000000"
                    android:text=":"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/etpassword"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="numberPassword"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:textColor="#000000"
                    android:text="Re-enterPassword"
                    android:textSize="20sp"/>

                <TextView
                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/etReenterPassword"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:inputType="numberPassword"/>

            </TableRow>

            <CheckBox
                android:id="@+id/remUser"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember User Id"
                android:textSize="20sp"/>

            <CheckBox
                android:id="@+id/rempass"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Password"
                android:textSize="20sp"/>

            <RelativeLayout>

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/account_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already Have an Account?"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"/>

                <Button
                    android:id="@+id/buttonlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textColor="#4444ff"
                    android:backgroundTint="#ffffff"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/account_type_label"/>

            </RelativeLayout>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonExit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Exit"
                android:backgroundTint="#ffbb00"
                android:textColor="#000000"
                android:padding="16dp"
                android:contentDescription="Exit Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="|"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:contentDescription="Separator" />

            <Button
                android:id="@+id/buttongo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Go"
                android:backgroundTint="#ffbb00"
                android:textColor="#000000"
                android:padding="16dp"
                android:contentDescription="Go Button" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>